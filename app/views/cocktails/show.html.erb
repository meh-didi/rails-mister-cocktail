<div class="container mt-5">
<h1> <%= @cocktail.name%></h1>
<p>Recipe</p>
<% @cocktail.doses.each do |dose| %>
<ul>
  <%= dose.ingredient.name  %>

(<%= dose.description %>)
<%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
<i class="fa fa-trash destroy_dose"></i>

<% end %>

</ul>


<div>
  <% end %>
  <%= link_to "Back", cocktails_path, class: "btn btn-outline-dark mt-2" %> <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-outline-dark mt-2" %></div>
</div>
